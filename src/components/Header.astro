---
import LanguageIcon from '../assets/icons/LanguageIcon.astro'
import HeaderButton from './HeaderButton.astro'
import UserIcon from '../assets/icons/UserIcon.astro'
---

<header class="flex w-full justify-between px-4 items-center">
  <div class="flex items-center">
    <img src="/EliteHosting.png" alt="The Logo of EliteHosting" width={100}>
    <h1 class="text-6xl font-black">
      Elite
      <strong class="text-6xl font-black">
        Hosting
      </strong>
    </h1>
  </div>
  <div class="flex items-center gap-10">
    <nav>
      <ul class="flex text-white gap-[20px] font-bold">
        <li>
          <a href="/">
            Inicio
          </a>
        </li>
        <li>
          <a href="/game-hosting">
            Game Hosting
          </a>
        </li>
        <li>
          <a href="/web-hosting">
            Web Hosting
          </a>
        </li>
        <li>
          <a href="/web-design">
            Dise√±o Web
          </a>
        </li>
      </ul>
    </nav>
    <section>
      <HeaderButton>
        <LanguageIcon />
      </HeaderButton>
      <HeaderButton>
        <UserIcon />
      </HeaderButton>
    </section>
  </div>
</header>


<style>
  header {
    top: 0;
    left: 0;
    position: fixed;
    background-color: #07072600;
    animation: enhace-header 0.3s ease-in-out both;
    animation-timeline: scroll(root block);
  }

  @keyframes enhace-header {
    to {
      background-color: #07072644;
      backdrop-filter: blur(20px);
    }
  }

  /* Sombra interior */ 
  h1 {
  background-color: #26a1a5;
  color: transparent;
  text-shadow: 0px 2px 3px #007bff;
  -webkit-background-clip: text;
  -moz-background-clip: text;
          background-clip: text;
  }
  strong {
  background-color: #e5ad01;
  color: transparent;
  text-shadow: 0px 2px 3px #ffae00;
  -webkit-background-clip: text;
  -moz-background-clip: text;
          background-clip: text;
  }
  li {
    transition: all 0.3s ease-in-out;
    border-bottom: 2px solid transparent;
  }

  li:hover {
    color: #2cf1f8;
    border-bottom: 2px solid #2cf1f8;
  }

</style>
