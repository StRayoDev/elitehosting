---
import Image from "astro/components/Image.astro";

interface Props {
  title: string
  icon: string
  description: string
  price: string
  popular?: boolean
}

let { title, icon, description, price, popular } = Astro.props
---

<article class="w-[300px] bg-[#262633] text-center text-white gap-5 border border-[#4F517A]  rounded-lg relative">
  {
    popular && (
      <h6 class="absolute left-1/2 -top-[3%] text-xl flex -translate-x-1/2 bg-[#E5AD01] px-8 rounded-xl">
        ⭐ 
        <strong>
          POPULAR
        </strong>
      </h6>
    )
  }
  <h1 class="plan-title py-6 text-3xl rounded-lg min-w-full font-bold">
    { title }
  </h1>
  <Image
    src={icon}
    alt={title}
    width={100}
    height={100}
  />
  <p>
    { description }
  </p>
  <p class="text-[#4E71B6] text-xl font-black">
    { price }
  </p>
  <a href="" class="mb-6 bg-[#2D55A6] min-w-[80%] font-bold text-black border-2 border-[#1C1E47]">
    Más información ->
  </a>
</article>

<style>
  article {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .plan-title {
    background-image: linear-gradient(to top right, #070626 0%, #1C1E47 87%);
}
</style>