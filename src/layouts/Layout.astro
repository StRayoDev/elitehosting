---
import Header from '../components/sections/Header.astro'
import Footer from '../components/sections/Footer.astro'

interface Props {
  title: string;
  description: string;
}

const { title, description } : Props = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <title>{title}</title>
    <link rel="icon" href="/EliteHosting.png">
    <meta name="description" content={description}>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head> 
  <body>
    <Header/>
    <slot/>
    <Footer/>
  </body>
</html>

<style>
  body {
    background-image: linear-gradient(to bottom, #174a4a, #003f49, #003346, #002641, #051937);
  }
  html::-webkit-scrollbar {
    width: 6px;
  }
  html::-webkit-scrollbar-thumb {
    background-color: #DEFFFF;
    border-radius: 10px;
  }
  html::-webkit-scrollbar-track {
    background-color: #000c37;
  }
  html::-webkit-scrollbar-thumb:active {
    background-color: #DEFFFF;
  }
  html::-webkit-scrollbar-corner {
    background-color: #000c37;
  }
  @supports not selector(::-webkit-scrollbar) {
    html {
      scrollbar-width: thin;
      scrollbar-color: #DEFFFF #000c37;
    }
  }
</style>
